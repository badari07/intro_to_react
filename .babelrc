{
  "presets": [
    "react",
    [
      "env",
      {
        "targets": {
          "browser": "last 2 version"
        },
        "loose": true,
        "modules": false
      }
    ]
  ],
  "plugins": [
    "react-hot-loader/babel",
    "babel-plugin-transform-class-properties",
    "babel-plugin-transform-object-rest-spread"
  ],
  "env": {
    "test": {
      "plugins": ["transform-es2015-modules-commonjs"]
    },
    "server": {
      "plugins": ["transform-es2015-modules-commonjs"]
    }
  }
}
